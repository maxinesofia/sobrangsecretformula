# Bastion Security Group
resource "aws_security_group" "bastion_sg" {
  name   = "${var.lastname}-${var.project_name}-BastionSG"
  vpc_id = var.vpc_id

  ingress {
    from_port   = 22
    to_port     = 22
    protocol    = "tcp"
    cidr_blocks = ["0.0.0.0/0"]
  }

  egress {
    from_port   = 0
    to_port     = 0
    protocol    = "-1"
    cidr_blocks = ["0.0.0.0/0"]
  }

  tags = merge(var.common_tags, { Name = "${var.lastname}-${var.project_name}-BastionSG" })
}

# ALB Security Group
resource "aws_security_group" "alb_sg" {
